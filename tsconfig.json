{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "plugins": [],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "lib": ["ES2021.String"]
  },
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "dotenv/config",
    ]
  }
}
