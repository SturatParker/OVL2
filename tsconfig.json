{
  "compilerOptions": {
    "target": "ES5",
    "composite": true,
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["./*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "dotenv/config",
      "typescript-transform-paths/register",
      "tsconfig-paths/register"
    ]
  }
}
