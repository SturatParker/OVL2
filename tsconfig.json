{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "lib": ["ES2021.String"]
  },
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "dotenv/config",
      "typescript-transform-paths/register",
      "tsconfig-paths/register"
    ]
  }
}
